<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= article.title %></div>
  <div>Release Year: </div>
  <div><%= article.releaseYear %></div>
  <div>Rating: </div>
  <div><%= article.mpaaRating %></div>
  <div>Now Showing: </div>
  <div><%= article.nowShowing ? 'Yes' : 'Nope' %></div>
  <!-- start cast list -->
  <div>Cast:</div>
  <ul>
    <%- article.cast.map(p => 
      `<li>${d.name} <small>${d.born.toLocaleDateString()}</small></li>`
    ).join('') %>
  </ul>
  <!-- end cast list -->
</section>
<!-- add to cast form below this comment -->
<form id="add-per-to-cast" action="/articles/<%= article._id %>/discovers" method="POST">
  <select name="discoverId">
    <!-- Emit an option for each performer -->
    <%- discovers.map(p => 
      `<option value="${d._id}">${d.name}</option>`
    ).join('') %>
  </select>
  <button type="submit">Add to Cast</button>
</form>

<br><br><h2>Reviews</h2>
<% if (user) { %>
  <a href="/articles/<%= article._id %>/reviews/new">Add Review</a>
<form id="add-review-form" method="POST"
  action="/articles/<%= article._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Add Review">
</form>
<% } %>

<% if (article.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Users</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <!-- Yep, we can define variables! -->
      <% let total = 0 %>
      <% article.reviews.forEach(function(r) { %>
        <!-- Accumulate the total rating -->
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <!-- .toLocaleDateString() provides a more friendly date format -->
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <!-- Add a row to display the avg AFTER the forEach iteration  -->
      <tr>
        <td colspan="2"></td>
        <td><strong><%= (total / article.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>
